#ifndef __com_sun_star_chart_ChartPieSegmentProperties_idl__ 
#define __com_sun_star_chart_ChartPieSegmentProperties_idl__ 
 
#ifndef __com_sun_star_chart_ChartDataPointProperties_idl__ 
